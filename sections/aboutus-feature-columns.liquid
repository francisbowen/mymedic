{% include 'feature-columns' %}

{% schema %}
{
  "name": "Text columns with images",
  "class": "index-section feature-columns-container",
  "settings": [
  {
    "type": "header",
    "content": "Spacing"
  },
  {
    "type": "range",
    "id": "ptop",
    "label": "Top spacing desktop",
    "min": 0,
    "unit": "px",
    "max": 500,
    "step": 5,
    "default": 15
  },
  {
    "type": "range",
    "id": "pbottom",
    "label": "Bottom spacing desktop",
    "min": 0,
    "unit": "px",
    "max": 500,
    "step": 5,
    "default": 15
  },
  {
    "type": "range",
    "id": "ptop_mob",
    "label": "Top spacing mobile",
    "min": 0,
    "unit": "px",
    "max": 500,
    "step": 5,
    "default": 5
  },
  {
    "type": "range",
    "id": "pbottom_mob",
    "label": "Bottom spacing mobile",
    "min": 0,
    "unit": "px",
    "max": 500,
    "step": 5,
    "default": 5
  }, 
  {
    "type": "color",
    "id": "background_color",
    "label": "Background Color"
  },
  {
    "type": "select",
    "id": "background_color_type",
    "label": "Background Color Wide",
    "default": "full_width",
    "options": [
      {
        "value": "full_width",
        "label": "Full Width"
      },
      {
        "value": "container",
        "label": "Container"
      }
    ]
  },

  
  {
    "type": "header",
    "content": "Contents"
  },
    {
      "type": "radio",
      "id": "contained",
      "label": "Width should:",
      "options": [
        { "value": "container", "label": "Contstrain to container" },
        { "value": "container-fluid to-edges", "label": "Flow to the width of screen" }
      ],
      "default": "container"
    },

    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Text columns with images"
    },
    {
      "type": "checkbox",
      "id": "title_bold",
      "label": "Bold"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Font size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 32
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Font size (mobile)",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 24
    },
    
    {
      "type": "range",
      "id": "title_padding_left",
      "label": "Padding left",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "title_padding_right",
      "label": "Padding right",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "title_margin_bottom",
      "label": "Margin bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 15
    },
{
  "type": "range",
  "id": "title_border_bottom",
  "label": "Border bottom Size",
  "min": 0,
  "max": 10,
  "step": 1,
  "default": 5
},
    {
      "type": "color",
      "id": "title_color",
      "label": "Color"
    },
    
    {
      "type": "select",
      "id": "align_text",
      "label": "Text alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Image colums"
    },
    {
      "type": "range",
      "id": "column",
      "label": "Column",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text positon",
      "default": "below",
      "options": [
        {
          "value": "above",
          "label": "Above image"
        },
        {
          "value": "below",
          "label": "Below image"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_position_mobile",
      "label": "Text positon (mobile)",
      "default": "below",
      "options": [
        {
          "value": "above",
          "label": "Above image"
        },
        {
          "value": "below",
          "label": "Below image"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Column",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_image",
          "label": "Show image",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Add a title or tagline"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text align",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "range",
          "id": "title_size",
          "label": "Font size",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 21
        },
        {
          "type": "range",
          "id": "title_margin_bottom",
          "label": "Margin bottom",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Color"
        },
        


        {
          "type": "checkbox",
          "id": "enable_icon",
          "label": "Enable Icon",
          "default": true
        },
        {
          "type": "text",
          "id": "icon_text",
          "label": "Icon",
          "default": ">"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Color",
          "default": "#bf0217"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ]
}
{% endschema %}
