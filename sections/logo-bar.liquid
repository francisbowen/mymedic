{% include 'logo-bar-content' %}

{% schema %}
  {
    "name": "Logo list",
    "class": "index-section",
    "max_blocks": 20,
    "settings": [
    {
      "type": "radio",
      "id": "contained",
      "label": "Form should:",
      "options": [
        { "value": "container", "label": "Constrain to container" },
        { "value": "container-fluid", "label": "Flow to the width of screen" },
        { "value": "container custom", "label": "Constrain to customized container" }
      ],
      "default": "container"
    },
    {
      "type": "range",
      "id": "custom_container",
      "label": "Custom Container Width",
      "min": 300,
      "max": 1420,
      "step": 20,
      "default": 1420
    },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Logo list"
      },
      {
        "type": "range",
        "id": "image_width",
        "label": "Logo width",
        "min": 30,
        "max": 100,
        "step": 1,
        "default": 70
      }, 
      {
        "type": "range",
        "id": "image_width_mobile",
        "label": "Logo width (mobile)",
        "min": 30,
        "max": 100,
        "step": 1,
        "default": 50
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
        {
          "type": "text",
          "id": "image_svg",
          "label": "Svg"
        },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "title"
          },
          {
            "type": "select",
            "id": "title_layout",
            "label": "Title Position",
            "default": "right",
            "options": [
              {
                "value": "right",
                "label": "Title on Left"
              },
              {
                "value": "bottom",
                "label": "Title on Bottom"
              }
            ]
          },
          {
            "type": "color",
            "id": "title_color",
            "label": "Color",
            "default": "#888"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo list",
        "category": "Image",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
