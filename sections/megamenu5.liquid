{% include 'megamenu' %}

{% schema %}
  {
    "name": "Megamenu 5",
    "class": "megamenu full-width",
    "settings": [
      {
        "type": "header",
        "content": "Megamenu content",
        "info": "Remember, setting what this is attached to is done in the [General settings]"
      }
    ],
    "blocks": [
      {
        "type": "megamenu_image",
        "name": "Image Column",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "select",
            "id": "column_width",
            "label": "Column span",
            "info": "Auto will attempt to fill automatically",
            "options": [
              { "value": "col", "label": "Auto"},
              { "value": "col-10", "label": "1/6 Column"},
              { "value": "col-12", "label": "1/5 Column"},
              { "value": "col-15", "label": "1/4 Column"},
              { "value": "col-20", "label": "1/3 Column"},
              { "value": "col-24", "label": "2/5 Column"},
              { "value": "col-30", "label": "1/2 Column"},
              { "value": "col-36", "label": "3/5 Column"},
              { "value": "col-40", "label": "2/3 Column"},
              { "value": "col-45", "label": "3/4 Column"},
              { "value": "col-48", "label": "4/5 Column"},
              { "value": "col-50", "label": "5/6 Column"},
              { "value": "col-60", "label": "Full Width"}
            ]
          }
        ]
      },
      {
        "type": "megamenu_menu",
        "name": "Menu Column",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Title Link",
            "info": "Optional"
          },
          {
            "type": "link_list",
            "id": "linklist",
            "label": "Linklist"
          },
          {
            "type": "checkbox",
            "id": "enable_linklist_hover_image",
            "label": "Enable linklist hover image"
          },
          {
            "type": "textarea",
            "id": "linklist_hover_image_array",
            "label": "link Hover image",
            "info": "Split by ','"
          },
          {
            "type": "text",
            "id": "title_2",
            "label": "Title"
          },
          {
            "type": "url",
            "id": "url_2",
            "label": "Title Link",
            "info": "Optional"
          },
          {
            "type": "link_list",
            "id": "linklist_2",
            "label": "Linklist"
          },
          {
            "type": "checkbox",
            "id": "enable_linklist_hover_image_2",
            "label": "Enable linklist hover image 2"
          },
          {
            "type": "textarea",
            "id": "linklist_hover_image_array_2",
            "label": "link Hover image 2",
            "info": "Split by ','"
          },
          {
            "type": "select",
            "id": "column_width",
            "label": "Column span",
            "info": "Auto will attempt to fill automatically",
            "options": [
              { "value": "col", "label": "Auto"},
              { "value": "col-10", "label": "1/6 Column"},
              { "value": "col-12", "label": "1/5 Column"},
              { "value": "col-15", "label": "1/4 Column"},
              { "value": "col-20", "label": "1/3 Column"},
              { "value": "col-24", "label": "2/5 Column"},
              { "value": "col-30", "label": "1/2 Column"},
              { "value": "col-36", "label": "3/5 Column"},
              { "value": "col-40", "label": "2/3 Column"},
              { "value": "col-45", "label": "3/4 Column"},
              { "value": "col-48", "label": "4/5 Column"},
              { "value": "col-50", "label": "5/6 Column"},
              { "value": "col-60", "label": "Full Width"}
            ]
          },

          {
            "type": "range",
            "id": "title_size",
            "label": "Font size",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 16
          },

          {
            "type": "range",
            "id": "link_size",
            "label": "Font size",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 14
          }
        ]
      }
    ]
  }
{% endschema %}
