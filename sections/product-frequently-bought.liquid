
<style>
  #shopify-section-{{ section.id }} #frequently_btn {
    {% if section.settings.button_width != blank %}
        width: {{ section.settings.button_width }}px;
    {% endif %}
    {% if section.settings.button_text_color != blank %}
        color: {{ section.settings.button_text_color }};
    {% endif %}
    {% if section.settings.button_background_color != blank %}
        background-color: {{ section.settings.button_background_color }};
    {% endif %}
    {% if section.settings.button_border_color != blank %}
        border-color: {{ section.settings.button_border_color }};
    {% endif %}
  }

  #shopify-section-{{ section.id }} span {
    {% if section.settings.text_size != blank %}
      font-size: {{ section.settings.text_size }}px;
    {% endif %}
    {% if section.settings.text_color != blank %}
      color: {{ section.settings.text_color }};
    {% endif %}
  }

  {% if section.settings.plus_color != blank %}
  #shopify-section-{{ section.id }} span.operator.pls {
    color: {{ section.settings.plus_color }};
  }
  {% endif %}

  {% if section.settings.equal_color != blank %}
  #shopify-section-{{ section.id }} span.operator.equal {
    color: {{ section.settings.equal_color }};
  }
  {% endif %}  

  {% if section.settings.total_color != blank %}
  #shopify-section-{{ section.id }} span.total_price_container, #shopify-section-{{ section.id }} span.total_price {
    color: {{ section.settings.total_color }};
  }
  {% endif %}

  {% if section.settings.saved_color != blank %}
  #shopify-section-{{ section.id }} span.saved_price_container, #shopify-section-{{ section.id }} span.saved_price {
    color: {{ section.settings.saved_color }};
  }
  {% endif %}

  {% if section.settings.image_width != blank %}
  #shopify-section-{{ section.id }} .image {
    width: {{ section.settings.image_width }}px;
  }
  {% endif %}

  #shopify-section-{{ section.id }} #frequently_btn:hover {
      {% if section.settings.button_text_hover_color != blank %}
          color: {{ section.settings.button_text_hover_color }};
      {% endif %}
      {% if section.settings.button_background_hover_color != blank %}
          background-color: {{ section.settings.button_background_hover_color }};
      {% endif %}
      {% if section.settings.button_border_hover_color != blank %}
          border-color: {{ section.settings.button_border_hover_color }};
      {% endif %}
  }

  @media screen and (max-width: 767px) {
    {% if section.settings.image_mobile_width != blank %}
    #shopify-section-{{ section.id }} .image {
      width: {{ section.settings.image_mobile_width }}px;
    }
    {% endif %}
    #shopify-section-{{ section.id }} #frequently_btn {
      {% if section.settings.button_width_mobile != blank %}
        width: {{ section.settings.button_width_mobile }}px;
      {% endif %}
    }
    #shopify-section-{{ section.id }} span {
      {% if section.settings.text_mobile_size != blank %}
        font-size: {{ section.settings.text_mobile_size }}px;
      {% endif %}
    }
  }
</style>

{% include 'product-bundle-section' %}

{% schema %}
{
  "name": "Product Frequently Bought",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "radio",
      "id": "contained",
      "label": "Slideshow should:",
      "options": [
        { "value": "container", "label": "Contstrain to container" },
        { "value": "container-fluid", "label": "Flow to the width of screen" }
      ],
      "default": "container"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Text",
      "default": "FREQUENTLY BOUGHT WITH:"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Font size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16
    }, 
    {
      "type": "range",
      "id": "text_mobile_size",
      "label": "Font size (mobile)",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 12
    }, 
    {
      "type": "color",
      "id": "text_color",
      "label": "Color"
    },
    {
      "type": "color",
      "id": "plus_color",
      "label": "Plus color"
    },
    {
      "type": "color",
      "id": "equal_color",
      "label": "Equal color"
    },
    {
      "type": "color",
      "id": "total_color",
      "label": "Total Price color"
    },
    {
      "type": "color",
      "id": "saved_color",
      "label": "Saved Price color"
    },

    {
      "type": "header",
      "content": "Image"
    },  
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width",
      "min": 100,
      "max": 500,
      "step": 10,
      "default": 140
    }, 
    {
      "type": "range",
      "id": "image_mobile_width",
      "label": "Image width (mobile)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 90
    }, 
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Text",
      "default": "ADD ALL"
    },
    {
      "type": "range",
      "id": "button_width",
      "label": "Button Width",
      "min": 50,
      "max": 300,
      "step": 5,
      "default": 170
    },
    {
        "type": "range",
        "id": "button_width_mobile",
        "label": "Button Width (Mobile)",
        "min": 50,
        "max": 300,
        "step": 5,
        "default": 170
    },
    {
        "type": "color",
        "id": "button_text_color",
        "label": "Text Color"
    },
    {
        "type": "color",
        "id": "button_background_color",
        "label": "Background Color"
    },
    {
        "type": "color",
        "id": "button_border_color",
        "label": "Border Color"
    },
    {
        "type": "color",
        "id": "button_text_hover_color",
        "label": "Text Hover Color"
    },
    {
        "type": "color",
        "id": "button_background_hover_color",
        "label": "Background Hover Color"
    },
    {
        "type": "color",
        "id": "button_border_hover_color",
        "label": "Border Hover Color"
    }
  
  ]
}
{% endschema %}
