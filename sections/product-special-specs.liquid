<style>
    .product-special-container .product-special-info-contents #product-specs .left-container {
        border-right: {{ section.settings.spece_left_right }}px solid;
    } 

    .product-special-container .product-special-info-contents #product-specs .left-container .spec {
        text-align: {{ section.settings.spece_left_text_align }};
        border-bottom: {{ section.settings.spece_left_bottom }}px solid;
    }

    .product-special-container .product-special-info-contents #product-specs .left-container .spec .title {
        font-size: {{ section.settings.spece_left_type_size }}px;
        color: {{ section.settings.spece_left_type_color }};
    }

    .product-special-container .product-special-info-contents #product-specs .left-container .spec .info {
        font-size: {{ section.settings.spece_left_value_size }}px;
        color: {{ section.settings.spece_left_value_color }};
    }

    .product-special-container .product-special-info-contents #product-specs .right-container {
        text-align: {{ section.settings.spece_right_text_align }};
    }

    .product-special-container .product-special-info-contents #product-specs .right-container .title {
        font-size: {{ section.settings.spece_right_type_size }}px;
        color: {{ section.settings.spece_right_type_color }};
    }

    .product-special-container .product-special-info-contents #product-specs .right-container .info {
        font-size: {{ section.settings.spece_right_value_size }}px;
        color: {{ section.settings.spece_right_value_color }};
    }

    .product-special-container .product-special-info-contents #product-specs .right-container .info span.active {
        color: {{ section.settings.spece_right_value_active_color }};
    }

    @media screen and (max-width: 767px) {
        .product-special-container .product-special-info-contents #product-specs .left-container .spec .title {
            font-size: {{ section.settings.spece_left_type_size_mobile }}px;
        }
        .product-special-container .product-special-info-contents #product-specs .left-container .spec .info {
            font-size: {{ section.settings.spece_left_value_size_mobile }}px;
        }
        .product-special-container .product-special-info-contents #product-specs .right-container .title {
            font-size: {{ section.settings.spece_right_type_size_mobile }}px;
        }
        .product-special-container .product-special-info-contents #product-specs .right-container .info {
            font-size: {{ section.settings.spece_right_value_size_mobile }}px;
        }
        .product-special-container .product-special-info-contents #product-specs .left-container {
            border-right: unset;
        } 
    }
</style>

