<style>
    .product-special-container .product-special-info-contents #product-videos .item .mega-title {
        margin-top: {{ section.settings.featured_video_title_top }}px;
        margin-bottom: {{ section.settings.featured_video_title_bottom }}px;
        font-size: {{ section.settings.featured_video_title_size }}px;
        color: {{ section.settings.featured_video_title_color }};
        text-align: {{ section.settings.featured_video_title_align }};
    }
    .product-special-container .product-special-info-contents #product-videos .item .mega-subtitle p {
        margin-top: {{ section.settings.featured_video_description_top }}px;
        margin-bottom: {{ section.settings.featured_video_description_bottom }}px;
        font-size: {{ section.settings.featured_video_description_size }}px;
        color: {{ section.settings.featured_video_description_color }};
        text-align: {{ section.settings.featured_video_description_align }};
    }

    @media screen and (max-width: 767px) {
        .product-special-container .product-special-info-contents #product-videos .item .mega-title {
            font-size: {{ section.settings.featured_video_title_size_mobile }}px;
        }
        .product-special-container .product-special-info-contents #product-videos .item .mega-subtitle p {
            font-size: {{ section.settings.featured_video_description_size_mobile }}px;
        }
    }
</style>

