{% include 'slideshow' %}

{% schema %}
  {
    "name": "Slideshow",
    "max_blocks": 4,
    "settings": [
      {
        "type": "radio",
        "id": "contained",
        "label": "Slideshow should:",
        "options": [
          { "value": "container", "label": "Contstrain to container" },
          { "value": "container-fluid", "label": "Flow to the width of screen" }
        ],
        "default": "container"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Auto-rotate slides",
        "default": true
      },
      {
        "type": "select",
        "id": "autoplay_speed",
        "label": "Change slides every",
        "options": [
          { "value": "5000", "label": "5 seconds" },
          { "value": "6000", "label": "6 seconds" },
          { "value": "7000", "label": "7 seconds" },
          { "value": "8000", "label": "8 seconds" },
          { "value": "9000", "label": "9 seconds" },
          { "value": "10000", "label": "10 seconds" }
        ],
        "default": "7000"
      },
      {
        "type": "checkbox",
        "id": "dots",
        "label": "Use dot navigation",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "arrows",
        "label": "Use arrow navigation",
        "default": true
      },
      {
        "type": "select",
        "id": "slideshow_height",
        "label": "Section height",
        "default": "small",
        "options": [
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Maintain Ratio based on First Slide",
            "value": "maintain_ratio"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Image Mobile"
          },
          {
            "type": "checkbox",
            "id": "overlay",
            "label": "Overlay image with color?",
            "info": "Color and opacity found in 'General settings'"
          },
          {
            "type": "color",
            "id": "overlay_color",
            "label": "Overay color"
          },
          {
            "type": "range",
            "id": "overlay_opacity",
            "label": "Overay opacity",
            "min": 0,
            "max": 1,
            "step": 0.1,
            "default": 0
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Image alignment",
            "default": "top",
            "options": [
              {
                "value": "center",
                "label": "Middle"
              },
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "right",
                "label": "Right"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              },
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "top right",
                "label": "Top Right"
              },
              {
                "value": "bottom right",
                "label": "Bottom Right"
              },
              {
                "value": "bottom left",
                "label": "Bottom Left"
              },
              {
                "value": "top left",
                "label": "Top Left"
              }
            ]
          },
          {
            "type": "select",
            "id": "text_layout",
            "label": "Text Position",
            "default": "center",
            "options": [
              {
                "value": "left",
                "label": "Text on Left"
              },
              {
                "value": "center",
                "label": "Text on Center"
              },
              {
                "value": "right",
                "label": "Text on right"
              }
            ]
          },
          { 
            "type": "select",
            "id": "text_layout_height",
            "label": "Text Height Position",
            "default": "center",
            "options": [
              {
                "value": "top",
                "label": "Text on top"
              },
              {
                "value": "center",
                "label": "Text on Center"
              },
              {
                "value": "bottom",
                "label": "Text on bottom"
              }
            ]
          },
          {
            "type": "select",
            "id": "text_align",
            "label": "Text Aligment",
            "default": "center",
            "options": [
              {
                "value": "left",
                "label": "Left Aligned Text"
              },
              {
                "value": "center",
                "label": "Center Aligned Text"
              },
              {
                "value": "right",
                "label": "Right Aligned Text"
              }
            ]
          },
          {
            "type": "header",
            "content": "Heading"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Image slide"
          },
          {
            "type": "range",
            "id": "title_size",
            "label": "Font size",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 32
          },
          {
            "type": "range",
            "id": "title_size_tablet",
            "label": "Font size (tablet)",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 28
          },
          {
            "type": "range",
            "id": "title_mobile_size",
            "label": "Font size (mobile)",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 38
          },
          {
            "type": "range",
            "id": "title_margin_bottom",
            "label": "Margin bottom",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 15
          },
          {
            "type": "color",
            "id": "title_color",
            "label": "Color"
          },
          {
            "type": "checkbox",
            "id": "title_bold",
            "label": "Bold",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "heading_border",
            "label": "Heading Border"
          },
          {
            "type": "range",
            "id": "heading_border_width",
            "label": "Border Width",
            "min": 0,
            "max": 700,
            "step": 10,
            "default": 150 
          },
          {
            "type": "range",
            "id": "heading_border_bottom",
            "label": "Border height",
            "min": 0,
            "max": 10,
            "step": 1,
            "default": 5 
          },
         
          {
            "type": "color",
            "id": "heading_border_color",
            "label": "Color"
          },

          
          {
            "type": "header",
            "content": "Subtitle"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
          },
          {
            "type": "range",
            "id": "subtitle_size",
            "label": "Font size",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 17
          },
          {
            "type": "color",
            "id": "subtitle_color",
            "label": "Color"
          },
          


          
          
          {
            "type": "text",
            "id": "button",
            "label": "Button text",
            "info": "Leave blank to not have a visible button",
            "default": "Shop Now"
          },

          {
            "type": "range",
            "id": "button_width",
            "label": "Button Width",
            "min": 50,
            "max": 300,
            "step": 5,
            "default": 170
          },
          {
            "type": "range",
            "id": "button_width_mobile",
            "label": "Button Width (Mobile)",
            "min": 50,
            "max": 300,
            "step": 5,
            "default": 170
          },

          {
            "type": "range",
            "id": "button_title_size",
            "label": "Font size",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 14
          },
          {
            "type": "range",
            "id": "button_title_size_mobile",
            "label": "Font size (mobile)",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 14
          },

          {
            "type": "color",
            "id": "button_text_color",
            "label": "Text Color"
          },
          {
            "type": "color",
            "id": "button_background_color",
            "label": "Background Color"
          },
          {
            "type": "color",
            "id": "button_text_hover_color",
            "label": "Text Hover Color"
          },
          {
            "type": "color",
            "id": "button_background_hover_color",
            "label": "Background Hover Color"
          },
          
          {
            "type": "url",
            "id": "link",
            "label": "Slide link"
          }
        ]
      }
    ]
  }
{% endschema %}
